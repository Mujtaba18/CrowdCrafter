<form action="/location/edit" method="post">
  <div>
    <label>name:</label>
    <input type="text" name="names" value="<%= location.names %>" >
  </div>

  <div>
    <label>capacity:</label>
    <input type="number" name="capacity" value="<%= location.capacity %>">
  </div>

  <div>
    <label>availability:</label>
    <select name="availability">
      <% if (location.availability === true) { %>
      <option value="available" >available</option>
      <option value="not available">not available</option>
      <% } else { %>
        <option value="not available">not available</option>
        <option value="available" >available</option>
      <% } %>

    </select>
    
  </div>

  <div>
    <label>city:</label>
    <input type="text" name="city" value="<%= location.city %>">
  </div>

  <div>
    <label>E-mail:</label>
    <input type="email" name="bookingEmail" value="<%= location.bookingEmail %>">
  </div>

  <div>
    <label>Phone number:</label>
    <input type="tel" name="bookingPhone" value="<%= location.bookingPhone %>">
  </div>

  <div>
    <label>Indoor:</label>
    <select name="indoor" class="form-control" value="<%= location.indoor %>">
      <% if (location.indoor === true) { %>
        <option value="indoor" >indoor</option>
        <option value="outdoor">outdoor</option>
        <% } else { %>
          <option value="outdoor">outdoor</option>
          <option value="indoor" >indoor</option>
        <% } %>
    </select>
  </div>

  
  <input type="hidden" name="id" value="<%= location._id %>"/>

  <button type="submit">update location</button>
</form>